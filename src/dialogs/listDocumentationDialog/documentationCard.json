{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "${name}",
      "size": "large",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${description}",
      "size": "small",
      "weight": "lighter",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.OpenUrl",
          "title": "Open",
          "url": "${link}"
        },
        {
          "type": "Action.Submit",
          "title": "Edit",
          "data": {
            "actionName": "${listEditActionName}",
            "id": "${id}"
          }
        },
        {
          "type": "Action.Submit",
          "title": "Delete",
          "data": {
            "id": "${id}"
          }
        }
      ]
    }
  ]
}
